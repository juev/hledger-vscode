{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*comment\\s*$",
      "end": "^\\s*end\\s+comment\\s*$"
    }
  },
  "onEnterRules": [
    {
      "beforeText": "^(\\d{4}[-/.]\\d{1,2}[-/.]\\d{1,2}|\\d{1,2}[-/.]\\d{1,2})\\s*(\\*|!)?\\s*(\\([^)]+\\))?\\s*.*\\S.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s+\\S.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": ".*",
      "action": {
        "indent": "none",
        "removeText": 1000
      }
    }
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\?\\/\\s]+)"
}