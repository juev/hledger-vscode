{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, amount alignment, and project-based caching for journal files",
  "version": "0.4.0",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Language Packs",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        },
        "hledger.smartIndent.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart indentation on Enter key for hledger files"
        },
        "hledger.autoCompletion.maxResults": {
          "type": "number",
          "default": 25,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of completion items to show"
        },
        "hledger.autoCompletion.maxAccountResults": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of account completion items to show (accounts are hierarchical, so more items are useful)"
        }
      }
    },
    "commands": [
      {
        "command": "hledger.onEnter",
        "title": "HLedger: Smart Enter",
        "category": "HLedger",
        "when": "editorTextFocus && editorLangId == hledger"
      },
      {
        "command": "hledger.onTab",
        "title": "HLedger: Smart Tab for Amount Alignment",
        "category": "HLedger",
        "when": "editorTextFocus && editorLangId == hledger"
      }
    ],
    "keybindings": [
      {
        "command": "acceptSelectedSuggestion",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && suggestWidgetVisible"
      },
      {
        "command": "hledger.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && !suggestWidgetVisible && !inSnippetMode && !parameterHintsVisible && config.hledger.smartIndent.enabled"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      },
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "constant.numeric.date.hledger",
            "settings": {
              "foreground": "#2563EB"
            }
          },
          {
            "scope": "entity.name.type.account.hledger",
            "settings": {
              "foreground": "#0EA5E9"
            }
          },
          {
            "scope": "constant.numeric.amount.hledger",
            "settings": {
              "foreground": "#F59E0B"
            }
          },
          {
            "scope": "entity.name.type.commodity.hledger",
            "settings": {
              "foreground": "#A855F7"
            }
          },
          {
            "scope": "entity.name.function.payee.hledger",
            "settings": {
              "foreground": "#EF4444"
            }
          },
          {
            "scope": "comment.line.semicolon.hledger",
            "settings": {
              "foreground": "#9CA3AF"
            }
          },
          {
            "scope": "comment.line.number-sign.hledger",
            "settings": {
              "foreground": "#9CA3AF"
            }
          },
          {
            "scope": "comment.block.hledger",
            "settings": {
              "foreground": "#9CA3AF"
            }
          },
          {
            "scope": "entity.name.tag.hledger",
            "settings": {
              "foreground": "#EC4899"
            }
          },
          {
            "scope": "keyword.directive.hledger",
            "settings": {
              "foreground": "#0EA5E9"
            }
          },
          {
            "scope": "keyword.operator.status.hledger",
            "settings": {
              "foreground": "#EAB308"
            }
          },
          {
            "scope": "string.other.code.hledger",
            "settings": {
              "foreground": "#A855F7"
            }
          },
          {
            "scope": "string.unquoted.note.hledger",
            "settings": {
              "foreground": "#6B7280"
            }
          },
          {
            "scope": "markup.underline.link.url.hledger",
            "settings": {
              "foreground": "#0563EB"
            }
          },
          {
            "scope": "entity.name.type.account.virtual.hledger",
            "settings": {
              "foreground": "#6B7280"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "tsc -p ./tsconfig.dev.json",
    "compile:prod": "tsc -p ./",
    "watch": "tsc -watch -p ./tsconfig.dev.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf out *.vsix",
    "prebuild": "npm run clean",
    "build": "npm run compile:prod",
    "prepackage": "npm run clean",
    "package": "npm run compile:prod && vsce package",
    "publish": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "ovsx": "^0.8.4",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}
