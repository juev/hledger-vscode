{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, amount alignment, and project-based caching for journal files",
  "version": "0.4.0",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Language Packs",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        },
        "hledger.smartIndent.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart indentation on Enter key for hledger files"
        },
        "hledger.semanticHighlighting.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable semantic highlighting for more precise syntax coloring. When disabled, falls back to TextMate grammar only."
        },
        "hledger.autoCompletion.maxResults": {
          "type": "number",
          "default": 25,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of completion items to show"
        },
        "hledger.autoCompletion.maxAccountResults": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of account completion items to show (accounts are hierarchical, so more items are useful)"
        }
      }
    },
    "semanticTokenTypes": [
      {
        "id": "account",
        "description": "HLedger account names"
      },
      {
        "id": "amount",
        "description": "HLedger amounts"
      },
      {
        "id": "comment",
        "description": "HLedger comments"
      },
      {
        "id": "date",
        "description": "HLedger dates"
      },
      {
        "id": "time",
        "description": "HLedger times"
      },
      {
        "id": "accountVirtual",
        "description": "HLedger virtual accounts"
      },
      {
        "id": "commodity",
        "description": "HLedger commodities"
      },
      {
        "id": "payee",
        "description": "HLedger payees"
      },
      {
        "id": "note",
        "description": "HLedger notes"
      },
      {
        "id": "tag",
        "description": "HLedger tags"
      },
      {
        "id": "directive",
        "description": "HLedger directives"
      },
      {
        "id": "operator",
        "description": "HLedger operators"
      },
      {
        "id": "code",
        "description": "HLedger transaction codes"
      },
      {
        "id": "link",
        "description": "HLedger links"
      }
    ],
    "commands": [
      {
        "command": "hledger.onEnter",
        "title": "HLedger: Smart Enter",
        "category": "HLedger",
        "when": "editorTextFocus && editorLangId == hledger"
      },
      {
        "command": "hledger.onTab",
        "title": "HLedger: Smart Tab for Amount Alignment",
        "category": "HLedger",
        "when": "editorTextFocus && editorLangId == hledger"
      }
    ],
    "keybindings": [
      {
        "command": "acceptSelectedSuggestion",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && suggestWidgetVisible"
      },
      {
        "command": "hledger.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && !suggestWidgetVisible && !inSnippetMode && !parameterHintsVisible && config.hledger.smartIndent.enabled"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      },
      "editor.semanticTokenColorCustomizations": {
        "[Default Dark+]": {
          "rules": {
            "account:hledger": "#0EA5E9",
            "accountVirtual:hledger": "#6B7280",
            "amount:hledger": "#F59E0B",
            "comment:hledger": "#9CA3AF",
            "date:hledger": "#2563EB",
            "time:hledger": "#2563EB",
            "commodity:hledger": "#A855F7",
            "payee:hledger": "#EF4444",
            "note:hledger": "#6B7280",
            "tag:hledger": "#EC4899",
            "directive:hledger": "#0EA5E9",
            "operator:hledger": "#EAB308",
            "code:hledger": "#A855F7",
            "link:hledger": "#2563EB"
          }
        },
        "[Default Light+]": {
          "rules": {
            "account:hledger": "#0369A1",
            "accountVirtual:hledger": "#374151",
            "amount:hledger": "#D97706",
            "comment:hledger": "#6B7280",
            "date:hledger": "#1D4ED8",
            "time:hledger": "#1D4ED8",
            "commodity:hledger": "#7C3AED",
            "payee:hledger": "#DC2626",
            "note:hledger": "#374151",
            "tag:hledger": "#DB2777",
            "directive:hledger": "#0369A1",
            "operator:hledger": "#CA8A04",
            "code:hledger": "#7C3AED",
            "link:hledger": "#1D4ED8"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "tsc -p ./tsconfig.dev.json",
    "compile:prod": "tsc -p ./",
    "watch": "tsc -watch -p ./tsconfig.dev.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf out *.vsix",
    "prebuild": "npm run clean",
    "build": "npm run compile:prod",
    "prepackage": "npm run clean",
    "package": "npm run compile:prod && vsce package",
    "publish": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^9.36.0",
    "jest": "^30.0.5",
    "ovsx": "^0.8.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}