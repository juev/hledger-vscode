{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, and project-based caching for journal files",
  "version": "0.2.1",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Language Packs",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        },
        "hledger.colors.date": {
          "type": "string",
          "default": "#2563EB",
          "description": "Color for dates in hledger transactions"
        },
        "hledger.colors.account": {
          "type": "string",
          "default": "#059669",
          "description": "Color for account names"
        },
        "hledger.colors.amount": {
          "type": "string",
          "default": "#DC2626",
          "description": "Color for numeric amounts"
        },
        "hledger.colors.commodity": {
          "type": "string",
          "default": "#7C3AED",
          "description": "Color for currency and commodity symbols"
        },
        "hledger.colors.payee": {
          "type": "string",
          "default": "#EA580C",
          "description": "Color for payee/description in transactions"
        },
        "hledger.colors.comment": {
          "type": "string",
          "default": "#6B7280",
          "description": "Color for comments"
        },
        "hledger.colors.tag": {
          "type": "string",
          "default": "#DB2777",
          "description": "Color for tags in comments"
        },
        "hledger.colors.directive": {
          "type": "string",
          "default": "#059669",
          "description": "Color for hledger directives"
        },
        "hledger.colors.accountDefined": {
          "type": "string",
          "default": "#0891B2",
          "description": "Color for explicitly defined accounts"
        },
        "hledger.colors.accountVirtual": {
          "type": "string",
          "default": "#6B7280",
          "description": "Color for virtual accounts in brackets/parentheses"
        },
        "hledger.smartIndent.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart indentation on Enter key for hledger files"
        },
        "hledger.autoCompletion.maxResults": {
          "type": "number",
          "default": 25,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of completion items to show"
        },
        "hledger.autoCompletion.maxAccountResults": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of account completion items to show (accounts are hierarchical, so more items are useful)"
        }
      }
    },
    "commands": [
      {
        "command": "hledger.onEnter",
        "title": "HLedger: Smart Enter",
        "when": "editorTextFocus && editorLangId == hledger"
      }
    ],
    "keybindings": [
      {
        "command": "acceptSelectedSuggestion",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && suggestWidgetVisible"
      },
      {
        "command": "hledger.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && !suggestWidgetVisible && !inSnippetMode && !parameterHintsVisible && config.hledger.smartIndent.enabled"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      },
      "editor.semanticHighlighting.enabled": true,
      "[hledger]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.tokenColorCustomizations": {
        "[*]": {
          "textMateRules": [
            {
              "scope": "hledger.date",
              "settings": {
                "foreground": "#2563EB",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.account",
              "settings": {
                "foreground": "#059669",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.amount",
              "settings": {
                "foreground": "#DC2626",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.commodity",
              "settings": {
                "foreground": "#7C3AED",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.payee",
              "settings": {
                "foreground": "#EA580C",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.comment",
              "settings": {
                "foreground": "#6B7280",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.tag",
              "settings": {
                "foreground": "#DB2777",
                "fontStyle": "bold"
              }
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "tsc -p ./tsconfig.dev.json",
    "compile:prod": "tsc -p ./",
    "watch": "tsc -watch -p ./tsconfig.dev.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf out *.vsix",
    "prebuild": "npm run clean",
    "build": "npm run compile:prod",
    "prepackage": "npm run clean",
    "package": "npm run compile:prod && vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}