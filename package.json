{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, amount alignment, and project-based caching for journal files",
  "version": "0.4.0",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Language Packs",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        },
        "hledger.smartIndent.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart indentation on Enter key for hledger files"
        },
        "hledger.autoCompletion.maxResults": {
          "type": "number",
          "default": 25,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of completion items to show"
        },
        "hledger.autoCompletion.maxAccountResults": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of account completion items to show (accounts are hierarchical, so more items are useful)"
        },
        "hledger.theme.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable applying custom hledger token colors via theme rules"
        },
        "hledger.theme.date": {
          "type": "string",
          "default": "#2563EB",
          "description": "Color for dates"
        },
        "hledger.theme.time": {
          "type": "string",
          "default": "#2563EB",
          "description": "Color for times"
        },
        "hledger.theme.amount": {
          "type": "string",
          "default": "#F59E0B",
          "description": "Color for amounts"
        },
        "hledger.theme.account": {
          "type": "string",
          "default": "#0EA5E9",
          "description": "Color for accounts"
        },
        "hledger.theme.accountVirtual": {
          "type": "string",
          "default": "#6B7280",
          "description": "Color for virtual accounts"
        },
        "hledger.theme.commodity": {
          "type": "string",
          "default": "#A855F7",
          "description": "Color for commodities"
        },
        "hledger.theme.payee": {
          "type": "string",
          "default": "#EF4444",
          "description": "Color for payees"
        },
        "hledger.theme.note": {
          "type": "string",
          "default": "#6B7280",
          "description": "Color for notes"
        },
        "hledger.theme.comment": {
          "type": "string",
          "default": "#9CA3AF",
          "description": "Color for comments"
        },
        "hledger.theme.tag": {
          "type": "string",
          "default": "#EC4899",
          "description": "Color for tags"
        },
        "hledger.theme.directive": {
          "type": "string",
          "default": "#0EA5E9",
          "description": "Color for directives"
        },
        "hledger.theme.operator": {
          "type": "string",
          "default": "#EAB308",
          "description": "Color for operators"
        },
        "hledger.theme.code": {
          "type": "string",
          "default": "#A855F7",
          "description": "Color for transaction codes"
        },
        "hledger.theme.link": {
          "type": "string",
          "default": "#2563EB",
          "description": "Color for links"
        }
      }
    },
    "commands": [
      {
        "command": "hledger.onEnter",
        "title": "HLedger: Smart Enter",
        "category": "HLedger",
        "when": "editorTextFocus && editorLangId == hledger"
      },
      {
        "command": "hledger.onTab",
        "title": "HLedger: Smart Tab for Amount Alignment",
        "category": "HLedger",
        "when": "editorTextFocus && editorLangId == hledger"
      }
    ],
    "keybindings": [
      {
        "command": "acceptSelectedSuggestion",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && suggestWidgetVisible"
      },
      {
        "command": "hledger.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && !suggestWidgetVisible && !inSnippetMode && !parameterHintsVisible && config.hledger.smartIndent.enabled"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile": "tsc -p ./tsconfig.dev.json",
    "compile:prod": "tsc -p ./",
    "watch": "tsc -watch -p ./tsconfig.dev.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf out *.vsix",
    "prebuild": "npm run clean",
    "build": "npm run compile:prod",
    "prepackage": "npm run clean",
    "package": "npm run compile:prod && vsce package",
    "publish": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^9.36.0",
    "jest": "^30.0.5",
    "ovsx": "^0.8.4",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}
