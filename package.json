{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, and project-based caching for journal files",
  "version": "0.1.0",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Language Packs",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "activationEvents": [
    "onLanguage:hledger"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        }
      }
    },
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}