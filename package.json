{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, and project-based caching for journal files",
  "version": "0.1.0",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Language Packs",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "activationEvents": [
    "onLanguage:hledger"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "hledgerDate",
        "superType": "string", 
        "description": "Date in hledger transactions"
      },
      {
        "id": "hledgerAccount",
        "superType": "namespace",
        "description": "Account names in hledger"
      },
      {
        "id": "hledgerAmount", 
        "superType": "number",
        "description": "Numeric amounts in hledger"
      },
      {
        "id": "hledgerCommodity",
        "superType": "type",
        "description": "Currency and commodity symbols"
      },
      {
        "id": "hledgerPayee",
        "superType": "string",
        "description": "Payee/description in transactions"
      },
      {
        "id": "hledgerComment",
        "superType": "comment",
        "description": "Comments in hledger files"
      },
      {
        "id": "hledgerTag",
        "superType": "keyword",
        "description": "Tags in hledger comments"
      },
      {
        "id": "hledgerDirective",
        "superType": "keyword",
        "description": "HLedger directives"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "defined",
        "description": "Explicitly defined accounts/commodities"
      },
      {
        "id": "used", 
        "description": "Used but not explicitly defined"
      },
      {
        "id": "virtual",
        "description": "Virtual accounts in brackets/parentheses"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        },
        "hledger.semanticHighlighting.autoEnable": {
          "type": "boolean",
          "default": true,
          "description": "Automatically enable semantic highlighting when extension activates for enhanced syntax coloring"
        },
        "hledger.colors.date": {
          "type": "string",
          "default": "#00D7FF",
          "description": "Color for dates in hledger transactions"
        },
        "hledger.colors.account": {
          "type": "string", 
          "default": "#FFD700",
          "description": "Color for account names"
        },
        "hledger.colors.amount": {
          "type": "string",
          "default": "#228B22", 
          "description": "Color for numeric amounts"
        },
        "hledger.colors.commodity": {
          "type": "string",
          "default": "#FF6B6B",
          "description": "Color for currency and commodity symbols"
        },
        "hledger.colors.payee": {
          "type": "string",
          "default": "#D2691E",
          "description": "Color for payee/description in transactions"
        },
        "hledger.colors.comment": {
          "type": "string",
          "default": "#87CEEB",
          "description": "Color for comments"
        },
        "hledger.colors.tag": {
          "type": "string",
          "default": "#DA70D6",
          "description": "Color for tags in comments"
        },
        "hledger.colors.directive": {
          "type": "string",
          "default": "#DA70D6",
          "description": "Color for hledger directives"
        },
        "hledger.colors.accountDefined": {
          "type": "string",
          "default": "#9CDCFE",
          "description": "Color for explicitly defined accounts"
        },
        "hledger.colors.accountVirtual": {
          "type": "string",
          "default": "#A0A0A0",
          "description": "Color for virtual accounts in brackets/parentheses"
        },
        "hledger.smartIndent.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart indentation on Enter key for hledger files"
        }
      }
    },
    "commands": [
      {
        "command": "hledger.onEnter",
        "title": "HLedger: Smart Enter",
        "when": "editorTextFocus && editorLangId == hledger"
      }
    ],
    "keybindings": [
      {
        "command": "acceptSelectedSuggestion",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && suggestWidgetVisible"
      },
      {
        "command": "hledger.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && !suggestWidgetVisible && !inSnippetMode && !parameterHintsVisible && config.hledger.smartIndent.enabled"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      },
      "editor.semanticHighlighting.enabled": true,
      "[hledger]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.tokenColorCustomizations": {
        "[*]": {
          "textMateRules": [
            {
              "scope": "hledger.date",
              "settings": { 
                "foreground": "#00D7FF",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.account",
              "settings": { 
                "foreground": "#FFD700",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.amount",
              "settings": { 
                "foreground": "#228B22",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.commodity",
              "settings": { 
                "foreground": "#FF6B6B",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.payee",
              "settings": { 
                "foreground": "#D2691E",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.comment",
              "settings": { 
                "foreground": "#87CEEB",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.tag",
              "settings": { 
                "foreground": "#DA70D6",
                "fontStyle": "bold"
              }
            }
          ]
        }
      },
      "editor.semanticTokenColorCustomizations": {
        "[*]": {
          "enabled": true,
          "rules": {
            "hledgerDate": {
              "foreground": "#00D7FF",
              "bold": true
            },
            "hledgerAccount": "#FFD700", 
            "hledgerAmount": {
              "foreground": "#228B22",
              "bold": true
            },
            "hledgerCommodity": {
              "foreground": "#FF6B6B",
              "bold": true
            },
            "hledgerPayee": "#D2691E",
            "hledgerComment": "#87CEEB",
            "hledgerTag": {
              "foreground": "#DA70D6",
              "bold": true
            },
            "hledgerDirective": {
              "foreground": "#DA70D6",
              "bold": true
            },
            "hledgerAccount.defined": "#9CDCFE",
            "hledgerAccount.virtual": "#A0A0A0"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}