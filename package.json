{
  "name": "hledger",
  "displayName": "hledger Language Support",
  "description": "Full-featured hledger extension with syntax highlighting, intelligent code completion, and project-based caching for journal files",
  "version": "0.2.0",
  "publisher": "evsyukov",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Language Packs",
    "Other"
  ],
  "keywords": [
    "hledger",
    "accounting",
    "finance",
    "ledger",
    "intellisense",
    "autocomplete",
    "plain text accounting"
  ],
  "main": "./out/extension/main.js",
  "contributes": {
    "languages": [
      {
        "id": "hledger",
        "aliases": [
          "hledger",
          "HLedger"
        ],
        "extensions": [
          ".journal",
          ".hledger",
          ".ledger"
        ],
        "filenames": [
          "journal",
          ".journal"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hledger",
        "scopeName": "source.hledger",
        "path": "./syntaxes/hledger.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "HLedger",
      "properties": {
        "hledger.autoCompletion.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic completion without keyboard shortcuts (Ctrl+Space)"
        },
        "hledger.colors.date": {
          "type": "string",
          "default": "#2563EB",
          "description": "Color for dates in hledger transactions"
        },
        "hledger.colors.account": {
          "type": "string",
          "default": "#059669",
          "description": "Color for account names"
        },
        "hledger.colors.amount": {
          "type": "string",
          "default": "#DC2626",
          "description": "Color for numeric amounts"
        },
        "hledger.colors.commodity": {
          "type": "string",
          "default": "#7C3AED",
          "description": "Color for currency and commodity symbols"
        },
        "hledger.colors.payee": {
          "type": "string",
          "default": "#EA580C",
          "description": "Color for payee/description in transactions"
        },
        "hledger.colors.comment": {
          "type": "string",
          "default": "#6B7280",
          "description": "Color for comments"
        },
        "hledger.colors.tag": {
          "type": "string",
          "default": "#DB2777",
          "description": "Color for tags in comments"
        },
        "hledger.colors.directive": {
          "type": "string",
          "default": "#059669",
          "description": "Color for hledger directives"
        },
        "hledger.colors.accountDefined": {
          "type": "string",
          "default": "#0891B2",
          "description": "Color for explicitly defined accounts"
        },
        "hledger.colors.accountVirtual": {
          "type": "string",
          "default": "#6B7280",
          "description": "Color for virtual accounts in brackets/parentheses"
        },
        "hledger.smartIndent.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable smart indentation on Enter key for hledger files"
        },
        "hledger.autoCompletion.maxResults": {
          "type": "number",
          "default": 25,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of completion items to show"
        },
        "hledger.autoCompletion.maxAccountResults": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 50,
          "description": "Maximum number of account completion items to show (accounts are hierarchical, so more items are useful)"
        },
        "hledger.optimization.enableAsyncParsing": {
          "type": "boolean",
          "default": false,
          "description": "Enable asynchronous file parsing for better performance with large files (experimental)"
        },
        "hledger.optimization.enableOptimizedFuzzyMatching": {
          "type": "boolean",
          "default": false,
          "description": "Enable optimized fuzzy matching with indexing and caching (experimental)"
        },
        "hledger.optimization.enablePerformanceMonitoring": {
          "type": "boolean",
          "default": false,
          "description": "Enable performance monitoring and metrics collection"
        },
        "hledger.optimization.enableBenchmarking": {
          "type": "boolean",
          "default": false,
          "description": "Enable performance benchmarking capabilities"
        },
        "hledger.optimization.fallbackOnError": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fallback to standard components when optimized versions fail"
        },
        "hledger.optimization.maxFileSize": {
          "type": "number",
          "default": 10485760,
          "minimum": 1048576,
          "maximum": 104857600,
          "description": "Maximum file size in bytes for async parsing (1MB to 100MB)"
        },
        "hledger.optimization.asyncChunkSize": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Number of lines to process per chunk in async parsing"
        },
        "hledger.optimization.fuzzyIndexing": {
          "type": "boolean",
          "default": true,
          "description": "Enable pre-indexing for fuzzy matching (improves performance with large datasets)"
        },
        "hledger.optimization.cacheResults": {
          "type": "boolean",
          "default": true,
          "description": "Enable result caching for parsing and fuzzy matching"
        },
        "hledger.cache.smartInvalidation": {
          "type": "boolean",
          "default": false,
          "description": "Enable smart cache invalidation with enhanced caches (experimental)"
        },
        "hledger.cache.fileWatching": {
          "type": "boolean",
          "default": false,
          "description": "Enable file system watching for automatic cache invalidation (experimental)"
        },
        "hledger.cache.cascadeInvalidation": {
          "type": "boolean",
          "default": false,
          "description": "Enable cascade invalidation based on file dependencies (experimental)"
        },
        "hledger.cache.compressionEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable cache data compression for memory efficiency (experimental)"
        },
        "hledger.cache.persistentCache": {
          "type": "boolean",
          "default": false,
          "description": "Enable persistent cache across VS Code sessions (experimental)"
        },
        "hledger.cache.metricsCollection": {
          "type": "boolean",
          "default": true,
          "description": "Enable cache performance metrics collection"
        },
        "hledger.cache.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed debug logging for cache operations"
        },
        "hledger.cache.debounceMs": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 1000,
          "description": "Debounce time in milliseconds for file system events"
        },
        "hledger.cache.maxBatchSize": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum number of events to batch together for processing"
        },
        "hledger.cache.maxAge": {
          "type": "number",
          "default": 300000,
          "minimum": 60000,
          "maximum": 3600000,
          "description": "Maximum cache entry age in milliseconds (1 minute to 1 hour)"
        },
        "hledger.cache.maxSize": {
          "type": "number",
          "default": 1000,
          "minimum": 100,
          "maximum": 10000,
          "description": "Maximum number of entries per cache"
        },
        "hledger.cache.watchPatterns": {
          "type": "array",
          "default": ["**/*.journal", "**/*.hledger", "**/*.ledger"],
          "items": {
            "type": "string"
          },
          "description": "File patterns to watch for changes (glob patterns)"
        },
        "hledger.cache.excludePatterns": {
          "type": "array",
          "default": ["**/node_modules/**", "**/.git/**"],
          "items": {
            "type": "string"
          },
          "description": "File patterns to exclude from watching (glob patterns)"
        }
      }
    },
    "commands": [
      {
        "command": "hledger.onEnter",
        "title": "HLedger: Smart Enter",
        "when": "editorTextFocus && editorLangId == hledger"
      },
      {
        "command": "hledger.optimization.runBenchmark",
        "title": "HLedger: Run Performance Benchmark",
        "category": "HLedger Optimization"
      },
      {
        "command": "hledger.optimization.exportData",
        "title": "HLedger: Export Performance Data",
        "category": "HLedger Optimization"
      },
      {
        "command": "hledger.optimization.resetMetrics",
        "title": "HLedger: Reset Performance Metrics",
        "category": "HLedger Optimization"
      },
      {
        "command": "hledger.cache.invalidateAll",
        "title": "HLedger: Invalidate All Caches",
        "category": "HLedger Cache"
      },
      {
        "command": "hledger.cache.invalidateProject",
        "title": "HLedger: Invalidate Project Cache",
        "category": "HLedger Cache"
      },
      {
        "command": "hledger.cache.showDiagnostics",
        "title": "HLedger: Show Cache Diagnostics",
        "category": "HLedger Cache"
      },
      {
        "command": "hledger.cache.exportMetrics",
        "title": "HLedger: Export Cache Metrics",
        "category": "HLedger Cache"
      }
    ],
    "keybindings": [
      {
        "command": "acceptSelectedSuggestion",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && suggestWidgetVisible"
      },
      {
        "command": "hledger.onEnter",
        "key": "enter",
        "when": "editorTextFocus && editorLangId == hledger && !suggestWidgetVisible && !inSnippetMode && !parameterHintsVisible && config.hledger.smartIndent.enabled"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.journal": "hledger",
        "*.hledger": "hledger",
        "*.ledger": "hledger",
        "journal": "hledger"
      },
      "editor.semanticHighlighting.enabled": true,
      "[hledger]": {
        "editor.semanticHighlighting.enabled": true
      },
      "editor.tokenColorCustomizations": {
        "[*]": {
          "textMateRules": [
            {
              "scope": "hledger.date",
              "settings": {
                "foreground": "#2563EB",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.account",
              "settings": {
                "foreground": "#059669",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.amount",
              "settings": {
                "foreground": "#DC2626",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.commodity",
              "settings": {
                "foreground": "#7C3AED",
                "fontStyle": "bold"
              }
            },
            {
              "scope": "hledger.payee",
              "settings": {
                "foreground": "#EA580C",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.comment",
              "settings": {
                "foreground": "#6B7280",
                "fontStyle": ""
              }
            },
            {
              "scope": "hledger.tag",
              "settings": {
                "foreground": "#DB2777",
                "fontStyle": "bold"
              }
            }
          ]
        }
      }
    }
  },
  "commands": [
    {
      "command": "hledger.applyColors",
      "title": "Apply Custom Colors",
      "category": "HLedger"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.22.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "typescript": "^4.9.4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/juev/hledger-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/juev/hledger-vscode/issues"
  },
  "homepage": "https://github.com/juev/hledger-vscode#readme",
  "icon": "images/icon.png"
}